{
    "name": "bm-cli",
    "version": "0.4.1",
    "description": "CLI meant to work together with other Forwardslash boilerplates.",
    "main": "dist/app.js",
    "engines": {
        "node": ">=20.2.0 <22.0.0"
    },
    "scripts": {
        "test": "jest --silent",
        "test:verbose": "jest --collect-coverage",
        "build": "rimraf ./dist && tsc -p tsconfig.build.json && cpy ./src/templates/* ./dist/",
        "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --check --ignore-path .gitignore '**/*.{js,ts,json,md}'",
        "format:fix": "prettier --write --ignore-path .gitignore '**/*.{js,ts,json,md}'",
        "postinstall": "cpy ./hooks/* ./.git/"
    },
    "keywords": [
        "cli",
        "bm"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@html-next/svg-icon-optimizer": "^0.0.1",
        "ansi-colors": "^4.1.3",
        "cli-spinner": "^0.2.10",
        "cli-spinners": "^2.9.2",
        "commander": "^11.1.0",
        "dotenv": "^16.4.1",
        "fancy-log": "^2.0.0",
        "figlet": "^1.7.0",
        "is-url": "^1.2.4",
        "lodash": "^4.17.21",
        "lodash.startcase": "^4.4.0",
        "lodash.template": "^4.5.0",
        "semver": "^7.6.0",
        "superagent": "^8.1.2",
        "svgo": "^3.0.0"
    },
    "devDependencies": {
        "@types/cli-spinner": "^0.2.3",
        "@types/fancy-log": "^2.0.2",
        "@types/figlet": "^1.5.8",
        "@types/is-url": "^1.2.32",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.14.202",
        "@types/lodash.startcase": "^4.4.9",
        "@types/lodash.template": "^4.5.3",
        "@types/mock-fs": "^4.13.4",
        "@types/semver": "^7.5.6",
        "@types/superagent": "^8.1.3",
        "cpy-cli": "^5.0.0",
        "eslint": "^8.56.0",
        "install": "^0.13.0",
        "jest": "^29.7.0",
        "mock-fs": "^5.2.0",
        "nodemon": "^3.0.3",
        "npm": "^10.4.0",
        "prettier": "3.2.4",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
